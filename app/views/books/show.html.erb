<p style="color: green"><%= notice %></p>

<% content_for :title, "Book Details" %>

<h1>Book Details</h1>

<p>
  <strong>Title:</strong>
  <%= @book.title %>
</p>

<p>
  <strong>Author:</strong>
  <%= @book.author %>
</p>

<p>
  <strong>Price:</strong>
  $<%= number_with_precision(@book.price, precision: 2) %>
</p>

<p>
  <strong>Published Date:</strong>
  <%= @book.published_date %>
</p>


<div>
  <%= link_to "Edit this book", edit_book_path(@book) %> |
  <%= link_to "Back to books", books_path %> |

  <%= link_to "Delete this book", delete_book_path(@book) %>
</div>

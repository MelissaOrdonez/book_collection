<h1>Delete Book</h1>

<p>Are you sure you want to delete this book?</p>

<p>
  <strong>Title:</strong>
  <%= @book.title %>
</p>

<p>
  <strong>Author:</strong>
  <%= @book.author %>
</p>

<p>
  <strong>Price:</strong>
  $<%= number_with_precision(@book.price, precision: 2) %>
</p>

<p>
  <strong>Published Date:</strong>
  <%= @book.published_date %>
</p>

<%= form_with model: @book, method: :delete do %>
  <%= submit_tag "Delete Book" %>
<% end %>

<%= link_to "Back to books", books_path %>
